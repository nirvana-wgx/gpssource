.datagrid_manipulate {
	position: absolute;
	top: 0;
	right: 0;
	width: 15px;
	height: 24px;
	border: none;
	background: none;
	z-index: 1;
}

.datagrid_th_hover span.sort {
	background: url(images/datagrid_sort.gif) no-repeat;
}


.datagrid_th_hover .datagrid_manipulate {
	background: url(images/datagrid_manipulate.gif) no-repeat -15px top;		
}

.datagrid_manipulate:hover {	
	background: url(images/datagrid_manipulate.gif) no-repeat;	
}

/*行背景色*/
.row_bgcolor {
	background-color: #EDF2FA;	
}

/*hover 背景色*/
.hover {
	background-color: #D0D2D6;
}  

/*行:hover*/
.rows_hover {
	background-color: #E8F0FA;
}
/*行焦距*/
.row_focus {
	background-color: #F2F6FA;
}

/*选中行背景色*/
.row_selected {
	background-color: #FAFAE1;
}	

/*行号*/
.row_number {
	/*border-left: 1px solid white;
	background-color: #E1EDFA;*/
	/*background: -webkit-linear-gradient(top, #E3E4E5, #DFE1E5); CSS3*/
	/*background: -moz-linear-gradient(top, #E3E4E5, #DFE1E5); CSS3*/
	background: url(images/datagrid_thbg.gif) repeat-x center;
}

th.row_number {
	background: none;
}
/*排序图标，sort占位宽度class*/
span.sort, 
span.asc, 
span.desc {
	display: inline-block;   
	width: 13px;
	height: 10px;		
	background: url(images/datagrid_sort.gif) no-repeat -13px top\9;
}

span.sort, 
span.asc, 
span.desc {
	*display: inline;
/*	display: inline\9;*/
}

/*IE7箭头位置
*+html span.asc, *+html span.desc {
	height: 14px;
}*/

/*顺序背景*/
.datagrid_pane span.asc {
	background: url(images/datagrid_sort_asc.gif) no-repeat center right;
}

/*倒序背景*/
.datagrid_pane span.desc {	
	background: url(images/datagrid_sort_desc.gif) no-repeat center right;	
}

/*分组属性定义*/
td[datagrid-group] {
	background-color: #EDF2FA;
	border-right: none;
}

/*分组图标展开的样式*/
.row_collapse {
	background: url(icons/16/row_collapse.gif) no-repeat;	
}

/*分组图标收起的样式*/
.row_expand {
	background: url(icons/16/row_expand.gif) no-repeat;	
}