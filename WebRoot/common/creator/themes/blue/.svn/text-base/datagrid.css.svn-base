div.table_datagrid {
	overflow: hidden;
	/*position: relative;确定表格操作按钮时使用*/
	text-overflow: ellipsis; /*css3*/
	white-space: nowrap; /*不换行*/		  
	word-break:keep-all; /*不换行*//*css3*/	
	
}

/*datagrid表头单元格 hover*/
.datagrid_th_hover {
	/*background-color: #DAE2F2;*/
	background: url(images/datagrid_thhover.gif) repeat-x top;
}

