/* ================================================================ 
								datagrid
   ================================================================ */
/*datagrid窗格*/
.datagrid_pane {
	position: relative;
	border: 1px solid #9FA0A2;
	overflow: hidden;
	background-color: white;
	_zoom: 1; /*修复滚动条滚动时触发的relative bug*/
	color: #333;
}

/*datagrid表头单元格*/
.datagrid_pane th {
	padding: 0 3px;		  
	font-size: 12px; 
	line-height: 22px;
	height: 24px;
	text-align: center;
	border-right: 1px dotted #A1A1A1;
	border-bottom: 1px dotted #A1A1A1;
	border-bottom: 1px solid #9FA0A2;
	cursor: default;
}

/*datagrid 表格内容单元格*/
.datagrid_pane td {
	font-size: 12px;
	line-height: 22px;
	height: 24px;
	border-right: 1px dotted #A1A1A1;  
	border-bottom: 1px dotted #A1A1A1;
	padding: 0 3px;
	cursor: default;
}

/*
.datagrid_content td:last-child , 
.datagrid_content th:last-child  {
	border-right: none;
}
*/

/*清除input的空白和边距*/
.datagrid_pane input {
	padding: 0;
	margin: 0;
}

/*固定列头*/
.datagrid_header {
	position: absolute;
}

/*固定列头td单元格居中*/
.datagrid_header td {
	text-align: center;
}

/*固定列头的表头*/
.datagrid_header_header {
	/*background-color: #E1EDFA; 表头背景*/	
	/*background: -webkit-linear-gradient(top, #E3E4E5, #DFE1E5); CSS3*/
	background: url(images/datagrid_thbg.gif) repeat-x top;
}

/*固定列头的表体，对应的scroll偏移量*/
.datagrid_header_body {	
	background-color: #F0F0F0;
}

/*固定列头的表体，scroll滚动层*/
.datagrid_header_body_view {
	overflow: hidden;
}

/*固定列头的表脚*/
.datagrid_header_footer {
	background-color: #F0F0F0;
	border-top: 1px solid #BBB;
}

/*表格内容*/
.datagrid_content {
	position: absolute;
	overflow: hidden;
}

/*表格内容表头，对应的scroll偏移量*/
.datagrid_content_header {
	width: 100%;
	overflow: hidden;
	background: url(images/datagrid_thbg.gif) repeat-x top;
	/*background-color: #E1EDFA; 表头背景
	background: -webkit-linear-gradient(top, #F2F6FA, #DAE2F2);*/ 
	/*background: -moz-linear-gradient(top, #E3E4E5, #DFE1E5); CSS3*/
}

/*表格内容表头的容器，scroll滚动层*/
.datagrid_content_header_view {
	overflow: hidden;
}


.datagrid_content_body {
	_width: 100%; /*修复IE6下的overflow：auto滚动不出现的bug
	overflow-x: auto;
	overflow-y: hidden;*/
	overflow: hidden;
	background-color: #F0F0F0;
}

.datagrid_header_body table,
.datagrid_header_footer table,
.datagrid_content_body table {
	background-color: white;
}

/*表格内容的容器*/
.datagrid_content_view {
	/*预留*/
}

/*表格内容主数据表,纵向滚动条*/
.datagrid_content_view_cell {
	overflow-y: auto;
	overflow-x: hidden;
}

/*表格内容的合计或者统计*/
.datagrid_content_view_total {
	border-top: 1px solid #BBB;
	width: 100%;
	overflow: hidden;
}

/*表脚*/
.datagrid_footer {
	width: 100%;
	position: absolute;
	bottom: 0;
	font-size: 12px;
	background: #E6ECF2 url(images/datagrid_footer_bg.gif) repeat-x top;
	padding: 1px 0;
	/*border-top: 1px solid #BBB;*/
}

/*移除页签的表格边线*/
.datagrid_footer td {
	border: none;
	line-height: 20px;
}

/* ================================================================ 
							simulate scrollbar
   ================================================================ */
/*vertical scrollbar*/
.datagrid_v-scrollbar  {
    position: absolute;
    right: 0;
    overflow-y: auto;
    overflow-x: hidden;
}

/*horizontal scrollbar*/
.datagrid_h-scrollbar {        
    position: absolute;
    bottom: 0;
    overflow-x: auto;
    overflow-y: hidden;
}

.datagrid_v-scrollbar_content {
    z-index: -1;
}

.datagrid_h-scrollbar_content {		
}	
/* ================================================================ 
							pagination
   ================================================================ */

/*页码所有链接*/
.pagination a {
  display: inline-block;
  width: 22px;
  height: 20px;
  border: 1px solid #E6EAF2;
}

/*页码所有链接hover*/
.pagination a:hover {
  border: 1px solid #7EABCD;
}

.pagination_text a {	
	line-height: 18px;
	width: auto;
	border: none;
	color: #333;
	text-decoration: none;
}

.pagination_text a:hover {
	border: none;
	color: #3193F5;
}

/*页码返回第一页内容*/
.pagination_first, 
.pagination_prev, 
.pagination_next, 
.pagination_last {
  width: 22px;
}

.pagination_first a {
  background: transparent url(images/pagination_first.gif) no-repeat center;/*返回第一页按钮背景*/
}

/*页码上一页内容*/
.pagination_ico_prev {
	text-align: left;
}

/*页码下一页内容*/
.pagination_ico_next {
	text-align: right;
}


.pagination_prev a {
	background: transparent url(images/pagination_prev.gif) no-repeat center;/*返回上一页按钮背景*/
}

.pagination_ico_prev a, 
.pagination_ico_next a {
	line-height: 20px;
	width: auto;
	border: none;
	color: #333;
	text-decoration: none;
}

.pagination_ico_prev a {
	padding-left: 16px;
	background: transparent url(images/pagination_prev.gif) no-repeat left;/*返回上一页按钮背景*/
}

.pagination_ico_prev a:hover, 
.pagination_ico_next a:hover {
	border: none;
	opacity: .6;
	filter: alpha(opacity=60);
	color: #3193F5;
}

.pagination_ico_next a {
	background: transparent url(images/pagination_next.gif) no-repeat right;/*返回下一页按钮背景*/
	padding-right: 16px;
}

.pagination_next a {
  background: transparent url(images/pagination_next.gif) no-repeat center;/*返回下一页按钮背景*/
}

.input_pages { 
	*font-family:Tahoma
}


.input_pages input { 
	width: 22px;
	*vertical-align:middle;
}

.pagination_last a {
  background: transparent url(images/pagination_last.gif) no-repeat center;/*返回最后一页按钮背景*/
}

/*页码刷新内容*/
.pagination_load {
}

.pagination_load a {
  background: transparent url(images/pagination_load.png) no-repeat center;/*刷新按钮背景*/
}

/*页码数据信息内容*/
.pagination_num {
  text-align: right;
}

/*页面分隔符号*/
.pagination_separator {
  border-left: 1px solid #BBB;
  border-right: 1px solid white;
  float: left;
  height: 20px;
}
 
/*页码信息*/
.pagination-info {
  float: right;
  font-size: 12px;
  margin: 5px 5px 0 0;
}

