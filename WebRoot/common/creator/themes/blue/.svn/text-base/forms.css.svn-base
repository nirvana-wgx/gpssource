/* ================================================================ 
							contextmenu
   ================================================================ */
/*contextmenu pane*/
.contextmenu, 
.contextmenu_submenu_pane {
	position: absolute;
	padding: 2px;
	border: 1px solid #A0A0A0;
	background-color: #F0F0F0;
	/*background: transparent url(images/menu.gif) repeat-y left;pane背景，包含中间分隔线*/
	z-index: 9;	
}

/*contextmenu shadow*/
.contextmenu_shadow, 
.contextmenu_submenu_shadow,
.dropmenu_shadow,
.dropmenu_submenu_shadow {
	position: absolute;
	box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.50);
	background-color: #999\9;  
	filter:progid:DXImageTransform.Microsoft.Blur(pixelRadius=2,MakeShadow=false,ShadowOpacity=0.2);
    -ms-filter:"progid:DXImageTransform.Microsoft.Blur(pixelRadius=2,MakeShadow=false,ShadowOpacity=0.2)";
	/*filter: progid:DXImageTransform.Microsoft.Blur(pixelRadius=2,MakeShadow=false,ShadowOpacity=0.2);*/
}

.contextmenu ul {
	height: 100%;	
	background: transparent url(images/menu_separator.gif) repeat-y 30px;
}

.contextmenu li:hover {
	border: 1px solid #AECFF7;
	/*
	background-color: rgba(230, 237, 246, .6);
	
	filter:progid:DXImageTransform.Microsoft.Gradient(startColorStr=#99FFFFFF,endColorStr=#99E6EDF6);
	*/	
	background: transparent url(images/menu_itembg.png) repeat-x top;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	border-radius: 2px;
	height: 22px;
}

.dropmenu li.contextmenu_freeze {
	opacity: .6;
	filter: alpha(opacity=60);
}

.contextmenu li.contextmenu_freeze:hover,
.dropmenu li.contextmenu_freeze:hover {
	border: 1px solid transparent;
	background: none;
	_border-color: #EEE;/*设定滤镜值，修复IE6不支持透明边框*/
	_filter:chroma(color=#EEE);/*IE滤镜，修复IE6不支持透明边框*/	
	/*filter:progid:DXImageTransform.Microsoft.Gradient(startColorStr=#00FFFFFF,endColorStr=#00E6EDF6);*/
}
/*
.contextmenu  li:hover:before	{
	content: '';
	position: absolute;
	z-index: -1;
	border: 1px solid white;
	top: 2px;
	bottom: 2px;
	left: 2px;
	right: 2px;
}
*/

/*contextmenu 菜单项*/
.contextmenu_item, 
.contextmenu_submenu {
	position: relative;
	border: 1px solid transparent;/*透明边线*/
	_border-color: #EEE;/*设定滤镜值，修复IE6不支持透明边框*/
	_filter:chroma(color=#EEE);/*IE滤镜，修复IE6不支持透明边框*/
	font-size: 12px;
	line-height: 22px;
	height: 22px;
	cursor: default;
}

.contextmenu li.contextmenu_submenu {
	background: url(images/ico_arrow2.gif) no-repeat 96% center;
}

.contextmenu_item a {
	color: #444;
	text-decoration: none;
	cursor: default;
}

/*contextmenu 菜单项 hover*/
.contextmenu_item_hover {
	border: 1px solid #7EABCD;
	background-color: #FAFAFA;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	-ms-border-radius: 2px;
}

.contextmenu_separate, 
li.contextmenu_separate:hover  {
	height: 0;
	border-top: 1px solid #E2E3E3;
	border-bottom: 1px solid white;
	margin: 3px 0;
	margin-left: 32px;
	margin-right: 2px;
}

/*contextmenu 菜单项图标*/
.contextmenu_item_ico {
	position: absolute;
	left: 4px;
	top: 4px;
	width: 16px;
	height: 16px;
}

.contextmenu_item_checkbox {	
	position: absolute;
	left: 5px;
	top: 5px;
	width: 13px;
	height: 13px;
}

/*contextmenu 菜单项文本*/
.contextmenu_item_text {
	cursor: default;
	position: absolute;
	color: #444;
	left: 31px;
	padding: 0 5px;
	white-space: nowrap; /*不换行*/		  
	word-break:keep-all; /*不换行*/
}

/* ================================================================ 
							dropmenu
   ================================================================ */
.dropmenu,
.dropmenu_submenu {
	position: absolute;
	z-index: 9;
	padding: 2px;
	border: 1px solid #6B82B3;
	background-color: #F2F3F5;
	/*
	border: 1px solid #A0A0A0;
	background-color: #F0F0F0;
	*/
} 
 
.dropmenu_submenu {	
	white-space: nowrap; 	
	/*word-wrap : normal;*/  
	word-break: keep-all;
	overflow: auto;
	*overflow-x: hidden;
	/*
	scrollbar-face-color: #E1E3E5;
	scrollbar-arrow-color: #45474D;
	scrollbar-track-color: #D4D6D9;
	scrollbar-3dlight-color: #717B8D;
	scrollbar-highlight-color: #E1E3E5; 
	scrollbar-shadow-color: #E1E3E5;
	scrollbar-darkshadow-color: #717B8D; 
	scrollbar-base-color: #E1E3E5;
	*/
} 

/*
.dropmenu_submenu::-webkit-scrollbar {
	background: url(images/combobox_btn.gif);
} 
*/

.dropmenu ul {
	height: 100%;
	*height: auto;
	background: transparent url(images/menu_separator.gif) repeat-y 26px;
} 

.dropmenu li {
	position: relative;
	line-height: 22px;
	height: 22px;
	*height: auto;
	*font-size: 0;
	cursor: default;
	border: 1px solid transparent;/*透明边线*/
}


.dropmenu div.freeze {
	position: absolute;
	top: 0;
	background-color: white;
	cursor: default;
	width: 100%;
	height: 100%;
	background-color: #F2F3F5;
	filter: alpha(opacity=60);
}

.dropmenu li:hover {
	border: 1px solid #AECFF7;
	background: transparent url(images/menu_itembg.png) repeat-x top;
	-webkit-border-radius: 2px;
	-moz-border-radius: 2px;
	border-radius: 2px;
	/*不错的效果
	border: 1px solid white;
	-webkit-box-shadow: 0 0 2px #449BF2;
	-moz-border-shadow: 0 0 2px #449BF2;
	box-shadow: 0 0 2px #449BF2;*/
	
}


li.dropmenu_separate, 
li.dropmenu_separate:hover  {
	line-height: 0;	
	height: 0;	
	font-size: 0;
	background: none;	
	border: none;
	border-top: 1px solid #E2E3E3;
	border-bottom: 1px solid white;
	margin: 3px 0;
	margin-left: 27px;
	margin-right: 2px;
	*height: auto;
	*border: none;
	*background: url(images/dropmenu_separate_bg.gif) repeat-x;
}

.dropmenu_arrow {
	background: url(images/ico_arrow2.gif) no-repeat 96% center;
}

.dropmenu_item {	
	display: block;
	color: #444;
	padding: 0 18px 0 30px;
	text-decoration: none;
	font-size: 12px;
}

.dropmenu_ico {
	position: absolute;
	display: block;
	top: 3px;
	left: 5px;
	width: 16px;
	height: 16px;
	/*
	margin: 4px 10px 0 5px;	
	*margin: 3px 10px 0 5px;
	*/
}

.dropmenu_checkbox {
	position: absolute;
	display: block;
	width: 13px;
	height: 13px;
	top: 5px;
	left: 5px;
	/*
	padding: 5px 13px 6px 6px;
	*/
}

.dropmenu_text {	
	display: block;
	padding: 0 22px 0 35px;
}
