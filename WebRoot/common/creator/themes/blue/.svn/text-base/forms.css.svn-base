	background: url(images/form_tabs_selected_bg.gif) no-repeat right top; /*选中标签右边背景*/
	line-height: 24px;
}

/*li标签*/
.form_tabs_normal {
	background: url(images/form_tabs_normal.gif) no-repeat left top; /*未选中标签左边背景*/	
	height: 23px;
}

.form_tabs_normal:hover {	
	/*background: url(images/form_tabs_normal_hover.gif) no-repeat left top; 未选中标签hover左边背景*/	
	cursor: pointer;
} 

.form_tabs_normal:hover .form_tabs_span:hover {
	/*background: url(images/form_tabs_normal_hover_bg.gif) no-repeat right top; 未选中标签hover右边背景*/	
}

/*li标签span*/
.form_tabs_span {
	background: url(images/form_tabs_normal_bg.gif) no-repeat right top; /*未选中标签右边背景*/	
	line-height: 23px;
}

/*li标签关闭图标*/
.form_tabs_close {
	width: 7px;
	height: 8px;
	margin-right: 7px;
	*margin-top: -10px; /*修正位置*/
	background: url(images/tabs_close.gif) no-repeat; /*关闭图标*/
	cursor: pointer;
}

.form_tabs_close:hover {
	background: url(images/tabs_close.gif) no-repeat 0 -8px; /*关闭图标*/
}

/*表格边距输入框*/
.forms_table_edit, 
input.forms_table_edit {
	border-width: 0;
	background-color: transparent;
}

.forms_table_edit:focus,
input.forms_table_edit:focus {
	border: none;	
	-webkit-box-shadow: 0 0 0 white;
	-moz-border-shadow: 0 0 0 white;
	box-shadow: 0 0 0 white;	
}

/* 解决表单元素超出的问题*/
.form_div {
	padding: 0 4px 0 2px;
}

/*-----------------------------------------------------------------------------
                       combobox, input, radio and checkbox 
-----------------------------------------------------------------------------*/
.input {}

.input_box,
.textarea_box {
	cursor: default;
	position: relative;
	color: #2E3A53;
	font-size: 12px;
	border: 1px solid #C6C8CC;	
	background-color: #FCFCFC;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	-webkit-box-shadow: inset 0 1px 1px #E5E5E5;
	-moz-box-shadow: inset 0 1px 1px #E5E5E5;
	box-shadow: inset 0 1px 1px #E5E5E5;
}

.input_box_icon {	
	padding-right: 25px;
}

.input_box_readonly {
	background-color: #F2F2F2;
}

.input_box input[type="text"],
.combobox_box input[type="text"] {
	position: relative;
	color: #555;
	width: 100%;
	border: none;
	line-height: 18px;
	height: 20px;
	*height: 16px;
	background-color: transparent;
}

.textarea_box textarea {	
	color: #555;
	width: 100%;
	border: none;
	background-color: transparent;
	*margin: -1px 0; /*修复IE7的外边距问题*/
}

.input_box input[type="text"]:focus,
.combobox_box input[type="text"]:focus,
.textarea_box textarea:focus {
	border: none;	
	-webkit-box-shadow: 0 0 0 white;
	-moz-border-shadow: 0 0 0 white;
	box-shadow: 0 0 0 white;	
}

.input_icon {
	cursor: pointer;
	opacity: .6;
	filter: alpha(opacity=60);
	position: absolute;
	width: 16px;
	height: 16px;
	right: 5px;
	top: 3px;
	background: transparent url(icons/16/find.png) no-repeat 99% center;
}

.input_icon:hover {
	opacity: 1;
	filter: alpha(opacity=100);
}

.combobox {
	margin: 0 3px;
}

.combobox_box {
	cursor: default;
	position: relative;
	color: #2E3A53;
	font-size: 12px;
	border: 1px solid #C6C8CC;	
	padding-right: 25px;
	background-color: #FCFCFC;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	-webkit-box-shadow: 0 0 2px #E5E5E5;
	-moz-box-shadow:  0 0 2px #E5E5E5;
	box-shadow: 0 0 2px #E5E5E5;	
	/*
	-webkit-box-shadow: 0 1px 2px #DADADA;
	-moz-box-shadow:  0 1px 2px #DADADA;
	box-shadow: 0 1px 2px #DADADA;	
	background-image: -webkit-linear-gradient(top, #FAFAFA, #F2F2F2); 
	background-image: -moz-linear-gradient(top, #FAFAFA, #F2F2F2); 
	background-image: -ms-linear-gradient(top, #FAFAFA, #F2F2F2);
	*/
	background: url(images/combobox_bg.gif) repeat-x;
}

.combobox_btn {
	cursor: pointer;
	position: absolute;
	width: 20px;
	height: 20px;
	right: 0;
	top: 0;
	-webkit-border-radius: 0 3px 3px 0;
	-moz-border-radius: 0 3px 3px 0;
	border-radius: 0 3px 3px 0;
	background: transparent url(images/combobox_btn.gif) no-repeat;
}

/*
.combobox_btn:active {	
	background: transparent url(images/combobox_btn.gif) no-repeat left -40px;
}
*/

.comboboxlist {
	border: 1px solid #C6C8CC;
	border-top: none;
	background-color: white;
	padding: 2px;
	-webkit-box-shadow: 0 1px 5px #DADADA;
	-moz-box-shadow:  0 1px 5px #DADADA;
	box-shadow: 0 1px 5px #DADADA;	
	-webkit-border-radius: 0 0 3px 3px;
	-moz-border-radius: 0 0 3px 3px;
	border-radius: 0 0 3px 3px;
	z-index: 100;
	margin-top: 1px;
}

.comboboxlist_li {
	color: #555;
	line-height: 20px;
}

.comboboxlist_li:hover {
	color: white;
	/*background: url(images/comboboxlist_li_bg.gif) repeat-x;*/
	background-color: #2A62BC;
}

.comboboxlist_li_label {}

.form_focus {
	outline: none;
	border: 1px solid #95BDE5;
	-webkit-border-radius: 3px;
	-moz-border-radius: 2px;
	border-radius: 2px;
	-webkit-box-shadow: 0 0 3px #449BF2;
	-moz-border-shadow: 0 0 3px #449BF2;
	box-shadow: 0 0 3px #449BF2;
}

.radio_wrapper {	
	display: inline-block;
	line-height: 20px;
	height: 20px;
}

.radio_box,
.checkbox_box  {
	float: left;
	width: 20px;
	height: 20px;		
}

.radio_box input,
.checkbox_box input {
	display: none;
}

.radio_box {
	background: url(images/form.png) no-repeat;	
}

.radio_box_checked {		
	background: url(images/form.png) no-repeat left -20px;
}

.radio_box_focus {}

.checkbox_box {		
	background: url(images/form.png) no-repeat -20px top;	
}

.checkbox_box_checked {
	background: url(images/form.png) no-repeat -20px;		
}

.checkbox_box_focus {}

.radio_label,
.checkbox_label {
	color: #2E3A53;
	display: inline-block;
	line-height: 20px;
}

/*-----------------------------------------------------------------------------
                       			 scrollbar
-----------------------------------------------------------------------------*/
.vert_scrollbar {
	position: absolute;
	z-index: 1;
	width: 17px;
	background-color: white;
}

.vert_scrollbar_dragger {}

.vert_scrollbar_drag {	
	position: absolute;
	background: url(images/scrollbar_bg.gif) repeat-y center;
	box-sizing: border-box;
	width: 100%;
	height: 50px;
	background-color: #FCFCFC;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	border: 1px solid #C6C8CC;	
	-webkit-box-shadow: 0 0 2px #E5E5E5;
	-moz-box-shadow:  0 0 2px #E5E5E5;
	box-shadow: 0 0 2px #E5E5E5;	
}

.vert_scrollbar_drag_rail {
	position: absolute;
	top: 0;
	z-index: -1;
	width: 100%;
	height: 100%;
	background-color: #F2F2F2;
	-webkit-box-shadow: inset 1px 0 3px #E5E5E5;
	-moz-box-shadow: inset 1px 0 3px #E5E5E5;
	box-shadow: inset 1px 0 3px #E5E5E5;	
}

.hor_scrollbar {}

.hor_scrollbar_dragger {}

.hor_scrollbar_drag {}

.hor_scrollbar_drag_rail {

}

.scrollbar_dragger_up,
.scrollbar_dragger_down {
	display: inline-block;
	border: 1px solid #C6C8CC;	
	cursor: pointer;
	box-sizing: border-box;
	width: 100%;
	height: 18px;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
	background: url(images/combobox_bg.gif) repeat-x;
}

.scrollbar_dragger_down {
	position: absolute;
	bottom: 0;
}

.scrollbar_dragger_up span,
.scrollbar_dragger_down span {
	display: inline-block;	
	width: 100%;
	height: 100%;
	background: transparent url(images/combobox_btn_up.gif) no-repeat -2px center;	
}

.scrollbar_dragger_down span {
	background: transparent url(images/combobox_btn.gif) no-repeat -2px center;	
}