/*-----------------------------------------------------------------------------
                                   login
-----------------------------------------------------------------------------*/
html, 
body {
	height: 100%;
}

body {
	min-width: 800px;
	font-family: 'SimSun',"Microsoft YaHei",Arial, Helvetica, sans-serif;
	behavior: url(common/creator/themes/silver/csshover3.htc);
	position: relative;
	overflow: auto;
	zoom: 1;
}
.login_pane {
	position: relative;
	height: 100%;
	overflow: hidden;	
}

.login_banner_bg {
	position: absolute;
	z-index: -999;
	width: 100%;
	height: 400px;
	bottom: 0;
	/*bottom: 30%;*/
	background: url(images/login/login_banner_bg.png) repeat-x center;
}

.login_banner {	
	width: 617px;
	height: 400px;
	background: url(images/login/login_sprite.png) no-repeat left -193px;
}

.login_figure {
	position: absolute;
	bottom: 0;
	right: 50%;
	width: 90px;
	height: 115px;
	background: url(images/login/login_sprite.png) no-repeat -443px -77px;
}

.login_header {
	position: relative;
	z-index: 1;
	height: 30%;
	background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#F2FCFC), to(#DCF2F1));
	background-image: -webkit-linear-gradient(top, #F2FCFC, #DCF2F1);
	background-image: -moz-linear-gradient(top, #F2FCFC, #DCF2F1);
	background-image: -ms-linear-gradient(top, #F2FCFC, #DCF2F1);
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#F2FCFC , endColorstr=#DCF2F1);
	-ms-filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#F2FCFC , endColorstr=#DCF2F1);
}

.login_header_wrapper, 
.login_footer_wrapper {
	position: relative;
	height: 100%;
	line-height: 100px;
	background: url(images/login/grid_bg.png);
}

.login_header h1 {	
	position: absolute;
	top: 40%;
	left: 80px;
	background: url(images/login/login_logo.png) no-repeat;
	margin-top: -20px;
	width: 462px;
	height: 60px;
}

.login_body {
	position: relative;
	height: 40%;
	min-height: 240px;
}

.login_bheader,
.login_bfooter,
.login {
	position: absolute;
	z-index: 1;
	left: 50%;
	width: 332px;
	height: 19px;
}

.login_bheader {
	bottom: 0;
	background: url(images/login/login_sprite.png);
}

.login_bfooter {
	bottom: -19px;
	*bottom: -18px;
	background: url(images/login/login_sprite.png) left -20px;
}

.login {
	padding: 0 12px;
	width: 298px;
	height: 100%;
}

.login form {
	height: 100%;
	background: url(images/login/login_bg.gif) repeat-y;
}

.login_title {	
	background-color: #F7F7F7;
	height: 40px;
	margin: 0 1px;
	text-align: center;
}

.login_title h2 {
	display: inline-block;
	background: url(images/login/login_sprite.png) no-repeat left -40px;
	width: 266px;
	height: 21px;
}

.login_image {
	position: absolute;
	top: 70px;
	left: 35px;
	width: 255px;
	height: 95px;	
	background: url(images/login/login_sprite.png) no-repeat left -62px;
}

.login input {
	border: none;
	background: none;
	width: 175px;
	height: 20px;	
	margin-left: 5px;
}

.login input.login_captcha {	
	width: 115px;
}

.login input:focus {
	outline: none;
}

.login label {
	display: block;
	padding: 14px 3px;
	padding-left: 66px;
	word-spacing: 8px;
}

.login label.label_first {
	padding-top: 5px;
}

.login label img {
	width: 62px;
	height: 18px;
	/*
	margin-right: 88px;
	float: right;	
	margin-top: 2px;*/
}

/* firefox hack */
@-moz-document url-prefix()
{
.login_label_password {
	word-spacing: 6px;
}}


/* Safari, chrome hack */
@media screen and (-webkit-min-device-pixel-ratio:0)
{.login_label_password {
	word-spacing: 6px;
}}

.login_button {
	bottom: 30px;
	margin-top: 140px;
	text-align: center;
}

.login .login_button_sign, 
.login .login_button_option {	
	width: 70px;
	height: 21px;
	border: none;
} 

.login .login_button_sign {
	background: url(images/login/login_sprite.png) no-repeat -463px top;	
}

.login .login_button_sign:active {
	background: url(images/login/login_sprite.png) no-repeat -533px top;	
}

.login .login_button_option {	
	margin-left: 30px;
	background: url(images/login/login_sprite.png) no-repeat -463px -25px;
}

.login .login_button_option:active {
	background: url(images/login/login_sprite.png) no-repeat -533px -25px;		
}


.login_footer {
	*position: relative;
	*z-index: -1;
	height: 30%;
	text-align: center;
    background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#F2FCFC), to(#DCF2F1));
	background-image: -webkit-linear-gradient(top, #F2FCFC, #DCF2F1);
	background-image: -moz-linear-gradient(top, #F2FCFC, #DCF2F1);
	background-image: -ms-linear-gradient(top, #F2FCFC, #DCF2F1);
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#F2FCFC , endColorstr=#DCF2F1);
	-ms-filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#F2FCFC , endColorstr=#DCF2F1);
}

.login_footer span {	
	display: inline-block;	
	margin-top: 2%;
	color: #636666;
	font-size: 12px;
}