/*定义portlet下所有链接*/
.portlet a {
	font-size: 12px;
	text-decoration: none;
}

.sortpanel {
	border: 1px solid #A1A6B3;
	background-color: white;
	padding: 0;
	border-radius: 4px 4px 0 0;	
    -webkit-border-radius: 4px 4px 0 0;
    -moz-border-radius: 4px 4px 0 0; 
}

.sortpanel_title {
	line-height: 26px;
	text-align: left;
	position: relative;
	border-bottom: 1px solid #BBB;
	-webkit-border-radius: 3px 3px 0 0;
	-moz-border-radius: 3px 3px 0 0;
	border-radius: 3px 3px 0 0;
	text-indent: 8px;
	background: url(images/form_title_bg.gif) repeat-x;
}

/*操作按钮容器*/
.sortpanel_title  span {
	position: absolute;
	right: 0;
	top: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
}

/*标题的文字*/
.sortpanel_title b {
	display: block;
	text-indent: 10px;
	font-size: 14px;
	font-weight: bold;
	/* text-shadow: 0 1px white; */
	color: white;
	text-shadow: 0 1px black;
	min-width: 266px;	
	/*background: url(images/sortpanel_transparent.png) no-repeat left bottom;透明玻璃效果*/
}

/*定义操作快捷图标*/
.sortpanel_title a {
	float: right;
	text-indent: -9999px;
	height: 15px;
	width: 14px;
	margin: 6px 5px 0 0;
	opacity: .8;
}

/*定义more图标*/
.sortpanel_btn_more {
	background: url(images/sortpanel_button.png) no-repeat left top;
}

.sortpanel_btn_more:hover {
	background: url(images/sortpanel_button.png) no-repeat -16px top;
}

/*定义刷新图标*/
.sortpanel_btn_refresh {	
	background: url(images/sortpanel_button.png) no-repeat -14px top;
}

.sortpanel_btn_refresh:hover {	
	background: url(images/sortpanel_button.png) no-repeat left top;
}

/*定义收起图标*/
.sortpanel_btn_hide {
	background: url(images/sortpanel_button.png) no-repeat -14px -15px;
}

.sortpanel_btn_hide:hover {
	background: url(images/sortpanel_button.png) no-repeat left -15px;
}

/*定义关闭图标*/
.sortpanel_btn_close {
	background: url(images/sortpanel_button.png) no-repeat -14px -30px;
}

.sortpanel_btn_close:hover {
	background: url(images/sortpanel_button.png) no-repeat left -30px;
}

/*内容去容器*/
.sortpanel_body {
}

.sortpanel table {
	width: 100%;
	border-top: 1px solid white;
}

.sortpanel_body th, .sortpanel_body td {
	border: dotted #888;
	border-width: 0 1px 1px 0;
	border-top: none;
	padding: 0 3px;
	line-height: 24px;	
}

.sortpanel_body th {
	background-color: #E4E9F2;
	text-align: center;
}


.sortpanel_body th:last-child, 
.sortpanel_body td:last-child,
.sortpanel_body th.last_child,
.sortpanel_body td.last_child {
	border-right: none;
}

.sortpanel_body tr:last-child td,
.sortpanel_body td.last_tr {
	border-bottom: none;
}

.sortpanel_body tr:nth-child(odd) {
	background-color: #EDF2FA;
}

.sortpanel_body td.td_odd {
	background-color: #EDF2FA;
}

.sortpanel_list,
.sortpanel_status {
	padding-bottom: 5px;
}

.sortpanel_list li {
	background: url(images/sp_dot.gif) no-repeat 5px center;
	border-bottom: 1px dotted #ACB0B3;
	line-height: 28px;	
	padding: 0 10px 0 15px;
	margin: 0 3px;
}

.sortpanel_list li:last-child {	
	border-bottom: none;
}

.sortpanel_list li a, 
.sortpanel_status li a {
	color: #3C5A9A;
}

/*
.sortpanel_list li a:visited  {
	color: #EF8718;
}
*/

.sortpanel_list li a:hover, 
.sortpanel_status li a:hover {
	color: #4C9DEE;
}

.sortpanel_status li {	
	padding: 0 3px;
}

.sortpanel_status li:last-child div{
	border-bottom: none;
}

.sortpanel_status div {
	line-height: 20px;
	border-bottom: 1px dotted #ACB0B3;
	padding: 5px 2px;
}

.sortpanel_status  div.li_last,
.sortpanel_list  li.li_last {
	border-bottom: none;
}